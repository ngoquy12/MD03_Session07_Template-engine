<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <%- include('./header.ejs')%>
    <a href="form-add">Add user</a>
    <table border="1">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Age</th>
          <th colspan="3">Option</th>
        </tr>
      </thead>
      <tbody>
        <% if(users.length > 0){ %> <% users.forEach(user=>{ %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.name %></td>
          <td><%= user.age %></td>
          <td>
            <a href="detail/<%= user.id %>">Detail</a>
          </td>
          <td>
            <a href="edit-user/<%= user.id %>">Edit</a>
          </td>
          <td>
            <a href="delete/<%= user.id %>">Delete</a>
          </td>
        </tr>
        <% }) %> <% } %>
        <tr></tr>
      </tbody>
    </table>
    <%- include('./footer.ejs')%>
  </body>
</html>
